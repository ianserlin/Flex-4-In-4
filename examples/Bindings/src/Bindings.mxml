<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   applicationComplete="application_applicationCompleteHandler(event)">
	
	<fx:Script>
		<![CDATA[
			
			import mx.events.FlexEvent;
			
			/**
			 * When the application loads, change the label to say "Simba, I am your father!"
			 */
			protected function application_applicationCompleteHandler(event:FlexEvent):void {
				theLabel.text = "Simba, I am your father!";
			}
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"/>
	</s:layout>
	
	<s:Label id="theLabel" text="Mufasa!"/>
	
</s:Application>
