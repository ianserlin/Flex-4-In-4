<script type="syntaxhighlighter" class="brush: mxml"><![CDATA[

<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   minWidth="955" minHeight="600" xmlns:local="*">

	<fx:Script>
		&lt;![CDATA[
			import flash.events.MouseEvent;
			import spark.effects.Rotate3D;

			protected function someButton_clickHandler(event:MouseEvent):void {
				var rotate3D:Rotate3D 			= new Rotate3D( event.target );
				rotate3D.duration 				= 2000; //ms
				rotate3D.autoCenterProjection 	= true;
				rotate3D.angleYFrom 			= 0;
				rotate3D.angleYTo 				= 360;
				rotate3D.angleZFrom				= 0;
				rotate3D.angleZTo				= 360;
				rotate3D.play();
			}
		]]&gt;
	</fx:Script>

	<s:Button id="someButton"
			  horizontalCenter="0" verticalCenter="0"
			  label="You spin me right round..."
			  click="someButton_clickHandler(event)"/>
	
</s:Application>


]]></script>