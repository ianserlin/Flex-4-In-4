  			   applicationComplete="applicationCompleteHandler(event)"> 

  	<fx:Script>
  		&lt;![CDATA[
  			import mx.binding.utils.BindingUtils;
  			import mx.binding.utils.ChangeWatcher;
  			import mx.events.FlexEvent;

  			/**
  			 * Just your average, run of the mill bindable String.
  			 */
  			[Bindable]
  			public var newSentence:String = "I am the new sentence, fresh out of your bindings baby!";

  			/**
  			 * When the application loads, set up the bindings using AS3.
  			 */
  			protected function applicationCompleteHandler(event:FlexEvent):void {
  				var changeWatcher:ChangeWatcher = BindingUtils.bindProperty( targetLabel, "text", this, "newSentence" );
  				// to break the binding via AS3, cache the ChangeWatcher instance returned by BindingUtils
  				// and call:
  				// changeWatcher.unwatch();
  			}

  		]]&gt;
  	</fx:Script>

  	<s:layout>
  		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"/>
  	</s:layout>

  	<s:Label id="targetLabel"
  			 text="this text will be updated via bindings"
  			 width="300"/>

  </s:Application>
</script>

